    "dotenv",
    "ts-node",
    "jest",
    "typescript server",
    "express server",
    "web development",
    "microservices",
    "web APIs",
    "typescript for beginners",
    "server-side development",
    "devops",
    "application architecture",
    "programming",
    "open source",
    "community-driven",
    "api development",
    "typescript examples",
    "modern web applications",
    "enterprise applications",
    "software engineering",
    "continuous integration",
    "version control",
    "npm",
    "yarn",
    "development tools",
    "api testing",
    "postman collection",
    "best practices",
    "clean code",
    "code organization",
    "TypeScript modules"
  ],
  "homepage": "https://github.com/nakuljhunjhunwala/Express-TS-Boilerplate#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nakuljhunjhunwala/Express-TS-Boilerplate.git"
  },
  "bugs": {
    "url": "https://github.com/nakuljhunjhunwala/Express-TS-Boilerplate/issues"
  },
  "author": "Nakul Jhunjhunwala",
  "license": "MIT",
  "description": "This Express TypeScript Boilerplate provides a robust foundation for building scalable and maintainable web applications. It incorporates best practices and a modular architecture inspired by Nest.js, making it easy to expand and manage your projects. With TypeScript support, built-in error handling, and customizable middleware, this boilerplate is perfect for developers looking to streamline their API development process. Whether you're creating RESTful services or full-fledged applications, this boilerplate offers the flexibility and structure you need to succeed.",
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.5.5",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "chalk": "^5.3.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "eslint": "^9.11.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-define-config": "^2.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "express": "^4.21.0",
    "husky": "^9.1.6",
    "nodemon": "^3.1.7",
    "prettier": "^3.3.3",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.10",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.6.3",
    "uuid": "^10.0.0"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}