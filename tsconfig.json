{
    "compilerOptions": {
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "baseUrl": "./",
        "typeRoots": [
            "./src/types/*",
            "./node_modules/@types"
        ],
        "paths": {
            "@config/*": [
                "src/config/*"
            ],
            "@module/*": [
                "src/module/*"
            ],
            "@model/*": [
                "src/model/*"
            ],
            "@middlewares/*": [
                "src/middlewares/*"
            ],
            "@utils/*": [
                "src/utils/*"
            ],
            "@constants/*": [
                "src/constants/*"
            ],
            "@logger/*": [
                "src/logger/*"
            ],
            "@types/*": [
                "src/types/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ],
    "ts-node": {
        "esm": true,
        "experimentalSpecifierResolution": "node"
    }
}